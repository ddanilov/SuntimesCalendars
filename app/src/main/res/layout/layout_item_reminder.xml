<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Spinner android:id="@+id/spin_minutes"
            android:layout_width="wrap_content" android:layout_height="match_parent" />

        <Spinner android:id="@+id/spin_method"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <ImageButton android:id="@+id/btn_delete"
            android:layout_width="48dp" android:layout_height="48dp"
            android:background="?attr/selectableItemBackground" android:padding="8dp"
            android:contentDescription="@string/action_deleteReminder" android:src="?attr/icActionDelete" />

    </LinearLayout>

    <CheckBox android:id="@+id/check_afterEvent"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:text="@string/reminder_afterEvent" />

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:layout_marginTop="8dp" android:background="?attr/hrColor" />

</LinearLayout>