<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="?attr/dialogPreferredPadding">

    <TextView
        android:id="@+id/txt_message0"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="?attr/text_size_small" tools:text="Progress message" />

    <ProgressBar android:id="@+id/progress1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <ProgressBar android:id="@+id/progress0"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <TextView
        android:id="@+id/txt_message1"
        android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_gravity="end" android:layout_margin="8dp"
        android:gravity="end|right"
        android:textSize="?attr/text_size_small" tools:text="Progress message\nsecond line" />

    <Button
        android:id="@+id/btn_cancel"
        android:textSize="?attr/text_size_small" android:text="@android:string/cancel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>
